<body>

<div class="card">
    <h2>Station Status OK</h2>

    <div class="row">
        <div class="group station">
            <label>Station Name</label>
            <input list="stations" id="stationName" placeholder="Search Station">
            <datalist id="stations"></datalist>
        </div>

        <div class="group line">
            <label>Line</label>
            <select id="line">
                <option value="1">1</option>
            </select>
        </div>

        <div class="group barcode">
            <label>Barcode</label>
            <input type="text" id="barcode" placeholder="Scan Barcode"
                   autocomplete="off" autocorrect="off"
                   autocapitalize="off" spellcheck="false"
                   inputmode="none" autofocus>
        </div>
    </div>

    <div class="button-row">
        <button onclick="submitData()">Submit</button>
    </div>
</div>

<!-- PASSWORD POPUP -->
<div class="popup-overlay" id="popup">
    <div class="popup">
        <h3 id="popupMessage">Enter Password</h3>
        <input type="password" id="passwordInput" placeholder="Enter Password">
        <button onclick="confirmPassword()">OK</button>
    </div>
</div>

<script>
let stationMap = {};
let pendingPayload = null;

/* LOAD STATIONS */
fetch('/api/stations')
    .then(res => res.json())
    .then(data => {
        const list = document.getElementById('stations');
        data.forEach(r => {
            stationMap[r.Station_Name] = r.Station_ID;
            const opt = document.createElement('option');
            opt.value = r.Station_Name;
            list.appendChild(opt);
        });
    });

function submitData() {
    const stationName = document.getElementById('stationName').value.trim();
    const stationId = stationMap[stationName];
    const line = document.getElementById('line').value;
    const barcode = document.getElementById('barcode').value.trim();

    if (!stationId || !barcode) {
        showPopup("Select valid station and scan barcode");
        return;
    }

    pendingPayload = { stationId, line, barcode };
    showPopup("Enter Password");
}

function confirmPassword() {
    const password = document.getElementById("passwordInput").value;

    if (password !== "123") {
        showPopup("Invalid Password");
        return;
    }

    fetch('/api/scan', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            ...pendingPayload,
            username: "Abhishek"
        })
    })
    .then(res => res.json())
    .then(resp => {
        const apiMsg =
            resp.externalApiResponse?.message ||
            resp.externalApiResponse?.msg ||
            resp.message;

        if (apiMsg === "Station created/updated successfully.") {
            showPopup("Station status updated");
        } else {
            showPopup(apiMsg || "Unknown response");
        }
    })
    .catch(err => {
        console.error(err);
        showPopup("Server error. Please try again.");
    });
}

function showPopup(msg) {
    document.getElementById('popupMessage').innerText = msg;
    document.getElementById('passwordInput').value = "";
    document.getElementById('popup').style.display = "flex";
}
</script>

</body>
