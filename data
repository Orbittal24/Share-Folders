<div class="card">
    <h2>Station Barcode Scanning</h2>

    <div class="row">

        <div class="group">
            <label>Station Name</label>
            <select id="stationName">
                <option value="">Select Station</option>
            </select>
        </div>

        <div class="group" style="max-width:150px;">
            <label>Line</label>
            <select id="line">
                <option value="1">1</option>
            </select>
        </div>

        <div class="group">
            <label>Barcode</label>
            <input type="text" id="barcode" placeholder="Scan Barcode"
                   autofocus onkeypress="if(event.key==='Enter') submitData()">
        </div>

        <div class="group" style="flex:0;">
            <button onclick="submitData()">Submit</button>
        </div>

    </div>
</div>

<script>
/* ===== LOAD STATIONS ===== */
fetch('/api/stations')
    .then(res => res.json())
    .then(data => {
        const ddl = document.getElementById('stationName');
        data.forEach(r => {
            const opt = document.createElement('option');
            opt.value = r.Station_ID;        // PASS ID
            opt.textContent = r.Station_Name; // SHOW NAME
            ddl.appendChild(opt);
        });
    });

/* ===== SUBMIT BARCODE ===== */
function submitData() {
    const stationId = document.getElementById('stationName').value;
    const line = document.getElementById('line').value;
    const barcode = document.getElementById('barcode').value.trim();

    if (!stationId || !barcode) {
        alert('Select station and scan barcode');
        return;
    }

    fetch('/api/scan', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ stationId, line, barcode })
    })
    .then(res => res.json())
    .then(resp => {
        alert(resp.message);
        document.getElementById('barcode').value = '';
    });
}
</script>

</body>
