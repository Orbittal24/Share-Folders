def trigger_api(payload):
    start_time = time.time()  # Start timer
    try:
        r = requests.post(API_ENDPOINT, json=payload, timeout=5)
        elapsed_time = time.time() - start_time  # Calculate elapsed time
        if r.status_code != 200:
            print("[API ERROR]", r.status_code, f"Time taken: {elapsed_time:.3f}s")
        else:
            print("[API SUCCESS] Status:", r.status_code, f"Time taken: {elapsed_time:.3f}s")
            print("Response:", r.text)
    except Exception as e:
        elapsed_time = time.time() - start_time
        print("[API FAIL]", e, f"Time taken: {elapsed_time:.3f}s")
