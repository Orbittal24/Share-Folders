<script>
socket.on("foam_interlock_status", function (foam_numb) {
    console.log("foam_numb length:", foam_numb.length);

    // Inject modal CSS & HTML once if not already present
    if (!document.getElementById('foamModal')) {
        const style = document.createElement('style');
        style.innerHTML = `
            .modal {
                display: none;
                position: fixed;
                z-index: 9999;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0,0,0,0.5);
                justify-content: center;
                align-items: center;
            }
            .modal-content {
                background-color: #fff;
                margin: auto;
                padding: 25px 30px;
                border-radius: 10px;
                text-align: center;
                box-shadow: 0 8px 25px rgba(0,0,0,0.3);
                max-width: 400px;
                font-family: Arial, sans-serif;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }
            .modal-content h2 {
                color: #e74c3c;
                margin-bottom: 15px;
            }
            .modal-content p {
                margin-bottom: 20px;
                color: #333;
            }
            .modal-content button {
                padding: 8px 20px;
                border: none;
                background: #3498db;
                color: #fff;
                border-radius: 5px;
                cursor: pointer;
                font-size: 14px;
            }
            .modal-content button:hover {
                background: #2980b9;
            }
        `;
        document.head.appendChild(style);

        const modalHTML = `
            <div id="foamModal" class="modal">
              <div class="modal-content">
                <h2 id="foamModalTitle">Foam Status</h2>
                <p id="foamModalMessage"></p>
                <button id="foamModalOkBtn">OK</button>
              </div>
            </div>
        `;
        const div = document.createElement('div');
        div.innerHTML = modalHTML;
        document.body.appendChild(div);
    }

    function showFoamModal(message, callback) {
        const modal = document.getElementById("foamModal");
        const msgElem = document.getElementById("foamModalMessage");
        const okBtn = document.getElementById("foamModalOkBtn");

        msgElem.textContent = message;
        modal.style.display = "flex";

        okBtn.onclick = () => {
            modal.style.display = "none";
            if (callback) callback();
        };

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
                if (callback) callback();
            }
        };
    }

    if (foam_numb.length === 0) {
        // Show modal if no foam linked and refresh page on OK
        showFoamModal("Foam is not linked with the Pack", () => {
            location.reload();
        });
    } else {
        // Proceed if foam is linked
        console.log("Foam linked, proceeding...", pack, Module_count[3]);
        socket.emit("getGlobalIngersollData", pack, Module_count[3]);
    }
});
</script>
