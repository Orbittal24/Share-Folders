✔ Create trigger for INSERT
CREATE TRIGGER trg_ocv_machine_data_after_insert
AFTER INSERT ON taco_treceability.ocv_machine_data
FOR EACH ROW
INSERT INTO taco_treceability.ocv_machine_data_mirror 
(
    cell_qrcode, voltage, ir, today_date, updated_time, machine_location,
    shift, used_on_line, kvalue, grade, cell_capacity, cell_class
)
VALUES
(
    NEW.cell_qrcode, NEW.voltage, NEW.ir, NEW.today_date, NEW.updated_time,
    NEW.machine_location, NEW.shift, NEW.used_on_line, NEW.kvalue,
    NEW.grade, NEW.cell_capacity, NEW.cell_class
);

✔ Create trigger for UPDATE
CREATE TRIGGER trg_ocv_machine_data_after_update
AFTER UPDATE ON taco_treceability.ocv_machine_data
FOR EACH ROW
INSERT INTO taco_treceability.ocv_machine_data_mirror 
(
    cell_qrcode, voltage, ir, today_date, updated_time, machine_location,
    shift, used_on_line, kvalue, grade, cell_capacity, cell_class
)
VALUES
(
    NEW.cell_qrcode, NEW.voltage, NEW.ir, NEW.today_date, NEW.updated_time,
    NEW.machine_location, NEW.shift, NEW.used_on_line, NEW.kvalue,
    NEW.grade, NEW.cell_capacity, NEW.cell_class
);
