const net = require('net');

// TCP/IP server details
const HOST = '10.9.4.28';  // Replace with server IP
const PORT = 6276;         // Replace with server port

// Create a socket and connect
const client = new net.Socket();

client.connect(PORT, HOST, () => {
  console.log('Connected to TCP server');

  // Send some data
  client.write('Hello from Node TCP client!\n');
});

// When data is received from server
client.on('data', (data) => {
  console.log('Received:', data.toString());

  // Example: close after first response
  // client.destroy();
});

// Handle connection close
client.on('close', () => {
  console.log('Connection closed');
});

// Handle errors
client.on('error', (err) => {
  console.error('Socket error:', err.message);
});
