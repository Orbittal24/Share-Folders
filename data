<body>

<div class="card">
    <h2>Station Barcode Scanning</h2>

    <!-- ===== ROW 1 ===== -->
    <div class="row">

        <div class="group">
            <label>Station Name</label>
            <select id="stationName">
                <option value="">Select Station</option>
            </select>
        </div>

        <div class="group" style="max-width:150px;">
            <label>Line</label>
            <select id="line">
                <option value="1">1</option>
            </select>
        </div>

        <div class="group">
            <label>Barcode</label>
            <input type="text"
                   id="barcode"
                   placeholder="Scan Barcode"
                   autofocus>
        </div>

    </div>

    <!-- ===== ROW 2 ===== -->
    <div class="row" style="justify-content:center; margin-top:25px;">
        <button onclick="submitData()">Submit</button>
    </div>

</div>

<script>
/* ========= LOAD STATION DROPDOWN ========= */
fetch('/api/stations')
    .then(res => res.json())
    .then(data => {
        const ddl = document.getElementById('stationName');
        data.forEach(r => {
            const opt = document.createElement('option');
            opt.value = r.Station_ID;        // send ID
            opt.textContent = r.Station_Name; // show name
            ddl.appendChild(opt);
        });
    });

/* ========= SCANNER SAFE ENTER HANDLING ========= */
let scanTimer = null;
const barcodeInput = document.getElementById('barcode');

barcodeInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
        e.preventDefault();

        clearTimeout(scanTimer);

        // allow scanner to finish input
        scanTimer = setTimeout(() => {
            submitData();
        }, 100);
    }
});

/* ========= SUBMIT ========= */
function submitData() {
    const stationId = document.getElementById('stationName').value;
    const line = document.getElementById('line').value;
    const barcode = barcodeInput.value.trim();

    if (!stationId || !barcode) {
        return; // silent (scanner friendly)
    }

    fetch('/api/scan', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ stationId, line, barcode })
    })
    .then(() => {
        // clear ONLY after scan is fully read
        barcodeInput.value = '';
        barcodeInput.focus();
    })
    .catch(() => {
        barcodeInput.focus();
    });
}
</script>

</body>
