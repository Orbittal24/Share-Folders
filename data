backend
const express = require("express");
const app = express();
const http = require("http").Server(app);
const io = require("socket.io")(http);
const path = require("path");
const fs = require("fs");
const sql = require("mssql");
const moment = require("moment");

/* ===================== MIDDLEWARE ===================== */
app.use(express.json());
app.use(express.urlencoded({ extended: true }));
app.use(express.static(__dirname));

/* ===================== DB CONFIG ===================== */
const sqlConfig = {
    user: "user_mis",
    password: "admin",
    database: "taco_treceability_master",
    server: "localhost\\MSSQLSERVER",
    pool: {
        max: 10,
        min: 0,
        idleTimeoutMillis: 30000
    },
    options: {
        encrypt: true,
        trustServerCertificate: true
    }
};

/* ===================== START SERVER ===================== */
http.listen(5400, "0.0.0.0", () => {
    console.log("Server running on port 5400");
});

/* ===================== UI ROUTE ===================== */
app.get("/station_status", (req, res) => {
    res.sendFile(path.join(__dirname, "app_station_status_ui.html"));
});

/* =====================================================
   ðŸ”½ NEW API â€” FETCH STATION DROPDOWN DATA
   ===================================================== */
app.get("/api/stations", async (req, res) => {
    try {
        await sql.connect(sqlConfig);

        const result = await sql.query(`
            SELECT Station_ID, Station_Name
            FROM taco_treceability.master_station
            ORDER BY Station_Name
        `);

        res.json(result.recordset);
    } catch (err) {
        console.error("Station Fetch Error:", err);
        res.status(500).json({ error: "DB error" });
    }
});

/* =====================================================
   ðŸ”½ NEW API â€” SAVE BARCODE SCAN DATA
   ===================================================== */
app.post("/api/scan", async (req, res) => {
    const { stationId, line, barcode } = req.body;

    if (!stationId || !barcode) {
        return res.status(400).json({ message: "Invalid data" });
    }

    try {
        await sql.connect(sqlConfig);

        await sql.request()
            .input("Station_ID", sql.Int, stationId)
            .input("Line", sql.VarChar(10), line)
            .input("Barcode", sql.VarChar(100), barcode)
            .query(`
                INSERT INTO taco_treceability.station_barcode_scan_log
                (Station_ID, Line, Barcode, Scan_Time)
                VALUES (@Station_ID, @Line, @Barcode, GETDATE())
            `);

        res.json({ message: "Barcode scanned successfully" });

    } catch (err) {
        console.error("Scan Insert Error:", err);
        res.status(500).json({ message: "Insert failed" });
    }
});

/* ===================== SOCKET.IO (UNCHANGED LOGIC) ===================== */
io.sockets.on("connection", (socket) => {
    console.log("Client connected");

    /* âœ… YOUR EXISTING SOCKET EVENTS â€” UNTOUCHED */
