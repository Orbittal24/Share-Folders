server side

const net = require("net");

const CLIENT_IP = "10.9.4.110";   // Replace with client PC IP
const CLIENT_PORT = 7000;         // Custom port for communication

const prnData = `
{D0180,0601,0150|}
{AY;+06,0|}
{C|}
{PC000;0238,0050,05,05,I,00,B=0003155|}
{PC001;0198,0116,05,05,I,00,B=Module-M8 (-)|}
{XS;I,0001,0002C3200|}
`;

function sendToClient(data) {
  const client = new net.Socket();

  client.connect(CLIENT_PORT, CLIENT_IP, () => {
    console.log("ðŸ“¡ Connected to client:", CLIENT_IP);
    client.write(data, "utf8", () => {
      console.log("âœ… Print data sent to client.");
      client.end();
    });
  });

  client.on("error", (err) => {
    console.error("âŒ Error sending to client:", err.message);
  });

  client.on("close", () => {
    console.log("ðŸ”Œ Connection closed.");
  });
}

sendToClient(prnData);


Client side

const net = require("net");
const fs = require("fs");

const CLIENT_PORT = 7000; // Must match server port

// Create TCP server to receive PRN data
const server = net.createServer((socket) => {
  console.log("ðŸ“¥ Connection received from server.");

  let prnData = "";

  socket.on("data", (chunk) => {
    prnData += chunk.toString();
  });

  socket.on("end", () => {
    console.log("âœ… Data received. Sending to printer...");

    // Option 1: Write to LPT1 directly (works if LPT1 is mapped to USB printer)
    try {
      fs.writeFileSync("LPT1", prnData, "utf8");
      console.log("ðŸ–¨ï¸ Sent to LPT1 successfully.");
    } catch (err) {
      console.error("âŒ Failed to write to LPT1:", err.message);
    }

    // Option 2 (fallback): Use Windows print command
    // Save PRN to a file and send via print command
    fs.writeFileSync("printjob.prn", prnData, "utf8");
    const { exec } = require("child_process");
    exec('print /D:LPT1 printjob.prn', (err, stdout, stderr) => {
      if (err) {
        console.error("âŒ Print command error:", err.message);
      } else {
        console.log("âœ… Print command executed.");
      }
    });
  });
});

server.listen(CLIENT_PORT, () => {
  console.log(`ðŸš€ Client listening on port ${CLIENT_PORT} for print jobs...`);
});
