<script>
function submitData() {
    const station = document.getElementById('stationName').value;
    const barcode = document.getElementById('barcode').value.trim();

    if (!station || !barcode) {
        alert("Please select station and scan barcode");
        return;
    }

    console.log({
        station,
        line: '1',
        barcode
    });

    document.getElementById('barcode').value = '';
}
</script>

