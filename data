<!-- PASSWORD POPUP -->
<div class="popup-overlay" id="popup">
    <div class="popup">
        <h3 id="popupMessage">Enter Password</h3>
        <input type="password" id="passwordInput" placeholder="Enter Password">
        <button onclick="confirmPassword()">OK</button>
    </div>
</div>

<script>
let stationMap = {};
let pendingPayload = null;

/* LOAD STATIONS */
fetch('/api/stations')
    .then(res => res.json())
    .then(data => {
        const list = document.getElementById('stations');
        data.forEach(r => {
            stationMap[r.Station_Name] = r.Station_ID;
            const opt = document.createElement('option');
            opt.value = r.Station_Name;
            list.appendChild(opt);
        });
    });

function submitData() {
    const stationName = document.getElementById('stationName').value.trim();
    const stationId = stationMap[stationName];
    const line = document.getElementById('line').value;
    const barcode = document.getElementById('barcode').value.trim();

    if (!stationId || !barcode) {
        showPopup("Select valid station and scan barcode");
        return;
    }

    pendingPayload = { stationId, line, barcode };
    showPopup("Enter Password");
}

function confirmPassword() {
    const password = document.getElementById("passwordInput").value;

    if (password !== "123") {
        showPopup("Invalid Password");
        return;
    }

    fetch('/api/scan', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            ...pendingPayload,
            username: "Abhishek"
        })
    })
    .then(res => res.json())
    .then(() => {
        showPopup("Station status updated");
    });
}

function showPopup(msg) {
    document.getElementById('popupMessage').innerText = msg;
    document.getElementById('passwordInput').value = "";
    document.getElementById('popup').style.display = "flex";
}
</script>

</body>
</html>


BACK

/******************** MODULES ********************/
const express = require("express");
const app = express();
const http = require("http").Server(app);
const io = require("socket.io")(http);
const path = require("path");
const sql = require("mssql");
const axios = require("axios");
const https = require("https");

/******************** MIDDLEWARE ********************/
app.use(express.static(__dirname));
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

/******************** DB CONFIG ********************/
const sqlConfig = {
    user: "user_mis",
    password: "admin",
    database: "taco_treceability_master",
    server: "10.9.4.28\\MSSQLSERVER",
    options: { encrypt: true, trustServerCertificate: true }
};

const sqlConfig2 = {
    user: "user_mis",
    password: "admin",
    database: "taco_treceability",
    server: "10.9.4.28\\MSSQLSERVER",
    options: { encrypt: true, trustServerCertificate: true }
};

const dbConn = new sql.ConnectionPool(sqlConfig);
const dbConn2 = new sql.ConnectionPool(sqlConfig2);

dbConn.connect();
dbConn2.connect();

/******************** SERVER ********************/
http.listen(5400, "0.0.0.0", () => {
    console.log("Server running on port 5400");
});

/******************** UI ROUTE ********************/
app.get("/station_status", (req, res) => {
    res.sendFile(path.join(__dirname, "app_station_status_ui.html"));
});

/******************** LOAD STATIONS ********************/
app.get("/api/stations", async (req, res) => {
    const result = await dbConn.request().query(`
        SELECT Station_ID, Station_Name
        FROM taco_treceability.master_station
        ORDER BY Station_Name
    `);
    res.json(result.recordset);
});

/******************** BARCODE SCAN ********************/
app.post("/api/scan", async (req, res) => {
    try {
        const { stationId, line, barcode, username } = req.body;

        if (!stationId || !barcode || !username) {
            return res.status(400).json({ message: "Missing required data" });
        }

        console.log("SCAN RECEIVED");
        console.log("Station ID:", stationId);
        console.log("Line:", line);
        console.log("Barcode:", barcode);
        console.log("Username:", username);

        const stationIdStr = String(stationId).trim();

        /* INSERT LOG */
        await dbConn2.request()
            .input("station_id", sql.VarChar, stationIdStr)
            .input("barcode_string", sql.VarChar, barcode)
            .input("username", sql.VarChar, username)
            .query(`
                INSERT INTO taco_treceability.dbo.station_status_ok_universal
                (station_id, barcode_string, username)
                VALUES (@station_id, @barcode_string, @username)
            `);

        /* EXTERNAL API */
        const apiPayload = {
            station_id: stationIdStr,
            line_id: line,
            customer_qrcode: barcode,
            station_status: "OK",
            checklist_name: "NA",
            substation_id: "NA"
        };

        const apiResponse = await axios.post(
            "https://mismainapp.tataautocomp.com:3241/station_status/filter",
            apiPayload,
            {
                httpsAgent: new https.Agent({ rejectUnauthorized: false }),
                timeout: 10000
            }
        );

        res.json({
            message: "Success",
            externalApiResponse: apiResponse.data
        });

    } catch (err) {
        console.error("Scan error:", err);
        res.status(500).json({ message: "Scan failed" });
    }
});

/******************** SOCKET ********************/
io.on("connection", () => {
    console.log("Client connected");
});
