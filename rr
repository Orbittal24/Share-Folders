socket.on('setGlobalIngersollData', (ingwholeData, ingpackDAta, pack_noo) => {
    console.log("check_iter", ingwholeData, ingpackDAta, pack_noo);

    // If third API returned no data â†’ Tray Assembly Pending
    if (ingwholeData && ingwholeData.message === "No data found") {

        const showTrayPendingPopup = () => {
            Swal.fire({
                title: `Tray Assembly Linking Pending!`,
                html: `<span style="font-size:16px;">Pack No: <b>${pack_noo}</b></span>`,
                icon: "warning",
                showConfirmButton: true,
                confirmButtonText: "OK",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false
            }).then(() => {
                // Re-show popup indefinitely
                showTrayPendingPopup();
            });
        };

        showTrayPendingPopup(); // initial call
        return; // stop further processing
    }

    // Otherwise continue with your existing torque checking logic...
});
